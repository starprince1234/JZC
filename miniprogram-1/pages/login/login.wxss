/* pages/login/login.wxss */
/* 图片 */
.background {
  position: absolute;
  left: 0;
  bottom: 0%;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999; /* 图片叠加在底部 */
}
.dial {
  /* 对话框 */
  display: flex;
  position: fixed;
  left: 10%; 
  top: 17%;  
  width: 50vw;
  opacity: 1;
  z-index: -998; /* 图片叠加在底部 */
}
.SCU{
  display: flex;
  position: fixed;
  left: 23%;
  top: 11%;
  width: 202rpx;
  height: 48rpx;
  opacity: 1;
  font-size: 70rpx;
  font-weight: 800;
  letter-spacing: 0px;
  line-height: 47.74rpx;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  vertical-align: top;
  white-space: nowrap;  
}
.cat {
  /* 吉祥物*/
  display: flex;
  position: fixed;
  left: 20%;
  top: 77.5%;
  width: 62vw;
  height: 20vh;
  opacity: 1;
  z-index: -997; /* 图片叠加在底部 */
}
.arrow{
  display: flex;
  position: absolute;
  width:8vw;
  height:5vh;
  top: 73.5%;
  right: 32%;
  background-size: contain;
  z-index: 999;
}
.button {
  background-color: #00ADB5;
  color: white;
  border-radius: 30rpx;
  width: 70vw; /* 使用视口宽度单位 */
  height: 5.9vh; /* 使用视口高度单位 */
  opacity: 1;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute; /* 固定定位 */
  bottom: 17%; 
  left: 6%; /* 水平居中 */
  z-index: 999;
}
/* 图片结束 */
form {
  position: absolute;
  width: 100%;
  top: 0%;
  height: 100%;
  width: 80vw;
  left: 10%;
}
.login-content {
  display: flex;
  position: absolute;
  width: 100%;
  height: 56vh;
  top: 17%;
}
/* 80和10%left */
.login-title {
  position: absolute;
  top:14%;
  left: 24%;
  width: 400rpx;
  height: 26rpx;
  opacity: 1;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 26rpx;
  color: rgba(34, 40, 49, 1);
  text-align: center;
  vertical-align: top;
  z-index: 1; /* 设置较高的层级 */
}
/* 密码与你的邮箱的边距 */
.form-item {
  position: relative;
  top: 20%;
  margin-top: 30rpx;
  left: 9%;
  color: #00ADB5;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 26rpx;
}
.form-item label {
  display: block;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
  color: #00ADB5;
  font-size: 30rpx;
  font-weight: 700;
}
.form-item input{
  margin-left: 0%;
}
/* 默认样式 */
.input-container {
  position: relative;
  width: 100%;
}


/* 选中时的样式 */
.preinput.focused {
  border-color: #00ADB5;
  box-shadow: 0 0 5px rgba(0, 173, 181, 0.5);
}
.password-toggle-icon {
  position: absolute;
  right: 22%;
  height: 50rpx;
  width: 50rpx;
  top: 50%;
  transform: translateY(-50%); /* 微调垂直居中 */
  cursor: pointer;
  z-index: 999;
}

/* 记住我与忘记密码 */
@media screen and (max-height: 600px) {
  .checkbox {
     transform: scale(0.7);
   }
   .forget-password {
    float: right;
    color: #7D8592;
    cursor: pointer;
    transform: scale(0.7) translateY(10%);

  }
  .else {
    position: absolute;
    top: 63%;
    left: 10%;
    width: 63vw;
  }
  .preinput {
    border: 1px solid #ccc;
    flex: 1;
    padding: 1%;
    font-weight: 500;
    font-size: 25rpx;
    border-radius: 15rpx;
    outline: none;
    width: 75%;
    padding-left: 20rpx;
    line-height: 76rpx;
  }
 }
 
