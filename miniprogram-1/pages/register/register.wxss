/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}
/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 背景图片 */
.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -999;
}
/* SCU Makers */
.SCU{
  display: flex;
  position: fixed;
  left: 23%;
  top: 11%;
  width: 202rpx;
  height: 48rpx;
  opacity: 1;
  font-size: 70rpx;
  font-weight: 800;
  letter-spacing: 0px;
  line-height: 47.74rpx;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  vertical-align: top;
  white-space: nowrap;  
}
/* 对话框 */
.dial {
  /* 对话框 */
  display: flex;
  position: fixed;
  left: 10%; 
  top: 17%;  
  opacity: 1;
  z-index: -998; /* 图片叠加在底部 */
}
form {
  position: absolute;
  width: 100%;
  top: 0%;
  width: 80vw; 
  height: 70vh;
  left: 10%;
}
/* 注册按钮 */
.button {
  background-color: #00ADB5;
  color: white;
  border-radius: 30rpx;
  width: 70vw; /* 使用视口宽度单位 */
  height: 5.9vh; /* 使用视口高度单位 */
  opacity: 1;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute; /* 固定定位 */
  bottom: 15%; 
  left: 6%; /* 水平居中 */
  z-index: 999;
}
.arrow{
  display: flex;
  position: absolute;
  width:8vw;
  height:5vh;
  top: 77.5%;
  right: 32%;
  background-size: contain;
  z-index: 999;
}
/* 验证码图片 */
.code {
  background-color: #00ADB5;
  color: white; /* 文字颜色根据实际需求调整 */
  border: none;
  right: 18%;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  border-top-right-radius: 15rpx; /* 右边上圆角半径 */
  border-bottom-right-radius: 15rpx; /* 右边下圆角半径 */
  text-align: center;
  font-size:25rpx;
  line-height: 325%; /* 使文字垂直居中，高度与按钮高度一致 */
  white-space: nowrap;
  opacity: 1;
  z-index: 999;
  position: absolute;
  height: 100%;
  width: 30%;
  top: 50%;
  transform: translateY(-50%); /* 微调垂直居中 */
  cursor: pointer;
}

/* 注册标题 */
.register-title {
  position: absolute;
  top:12%;
  left: 24%;
  width: 400rpx;
  height: 26rpx;
  opacity: 1;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 26rpx;
  color: rgba(34, 40, 49, 1);
  text-align: center;
  vertical-align: top;
  z-index: 1; /* 设置较高的层级 */
}

/* 注册表单内容 */
.register-content {
  display: flex;
  position: absolute;
  width: 100%;
  height: 70vh;
  top: 17%;
}

/* 表单项 */
.form-item {
  position: relative;
  top: 15%;
  margin-top: 30rpx;
  left: 9%;
  color: #00ADB5;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 26rpx;
}

.form-item input {
  margin-left: 0%;
}
.input-container1 {
  position: relative;
  width: 100%;
}
.input-container2 {
  position: relative;
  width: 100%;
}
.input-container3 {
  position: relative;
  width: 100%;
}
/* 密码显示/隐藏图标 */
.password-toggle-icon {
  position: absolute;
  right: 22%;
  height: 50rpx;
  width: 50rpx;
  top: 50%;
  transform: translateY(-50%); /* 微调垂直居中 */
  cursor: pointer;
  z-index: 999;
}

/* 返回登录链接 */
.login-link {
  position: absolute;
  white-space: nowrap; /* 防止文本换行 */
  text-align: center;
  top:90%;
  left: 30%;
  height: 5%;
  color: #00ADB5;
  cursor: pointer;
  font-size: 40rpx;
  z-index: 999;
}
